<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop> 
                <prop key="doroshenko.htm">doroshenkoController</prop>
                <prop key="vlasov.htm">vlasovController</prop>
                <prop key="akhmedov.htm">akhmedovController</prop>
                <prop key="rybitskyi.htm">rybitskyiController</prop>
                <prop key="neginskiy.htm">neginskiyController</prop>
                <prop key="miroshnychenko.htm">miroshnychenkoController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/views/"
          p:suffix=".jsp" />
    
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index"/>
    
    <bean name="doroshenkoController"
          class="com.javastudy.deliveryservice.mvc.controller.Doroshenko"
          />
    
    <bean name="akhmedovController"
          class="com.javastudy.deliveryservice.mvc.controller.Akhmedov"
          />
    <bean name="neginskiyController"
          class="com.javastudy.deliveryservice.mvc.controller.Neginskiy"
          />
    <bean name="rybitskyiController"
          class="com.javastudy.deliveryservice.mvc.controller.Rybitskyi"
          />

    <bean name="vlasovController"
          class="com.javastudy.deliveryservice.mvc.controller.Vlasov"
            />
    <bean name="miroshnychenkoController"
          class="com.javastudy.deliveryservice.mvc.controller.Miroshnychenko"
            />
</beans>
